pipeline{
    agent {
        docker { image 'node:16-alpine' }
    }
    stages{
        stage('Build'){
            steps{
                sh 'node --version'
            }
        }
    }
    post{
        success{
            slackSend channel: '#jenkinsci',
                      color: 'good',
                      message: "Ran on docker agent ${currentBuild.fullDisplayName}"
        }
        failure{
            slackSend channel: '#jenkinsci',
                      color: 'danger',
                      message: "Ran on docker agent ${currentBuild.fullDisplayName}"
        }
    }
}